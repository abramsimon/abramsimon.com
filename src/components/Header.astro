---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header>
	<nav>
		<h2><a href="/">{SITE_TITLE}</a></h2>
		<div class="internal-links">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/blog">Blog</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
		</div>
		<div class="social-links">
			<span class="social-pill">Open late â€¢ Analog only</span>
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1.25em;
		background: linear-gradient(
			120deg,
			rgba(var(--coffee-dark), 0.98),
			rgba(var(--coffee), 0.96)
		);
		color: #fdf8ef;
		box-shadow: 0 14px 30px rgba(var(--coffee-dark), 0.7);
	}
	h2 {
		margin: 0;
		font-size: 0.95em;
		letter-spacing: 0.18em;
		text-transform: uppercase;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
		color: inherit;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	nav a {
		padding: 1em 0.5em;
		color: rgba(255, 251, 244, 0.9);
		border-bottom: 4px solid transparent;
		text-decoration: none;
		font-size: 0.9rem;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	.social-links,
	.social-links a {
		display: flex;
		align-items: center;
	}

	.social-pill {
		padding: 0.35rem 0.9rem;
		border-radius: 999px;
		background: rgba(var(--mint), 0.2);
		border: 1px solid rgba(var(--mint), 0.6);
		color: #e9fff5;
		font-size: 0.75rem;
		text-transform: uppercase;
		letter-spacing: 0.16em;
		white-space: nowrap;
	}

	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}
</style>
