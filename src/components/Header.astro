---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header>
	<nav>
		<h2><a href="/">{SITE_TITLE}</a></h2>
		<div class="internal-links">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/shop/">Shop</HeaderLink>
			<HeaderLink href="/blog">Blog</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
		</div>
		<div class="social-links">
			<button type="button" id="cart-open-btn" class="cart-open-btn" aria-label="Open shopping cart">
				<svg class="cart-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
					<path d="M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4z" />
					<line x1="3" y1="6" x2="21" y2="6" />
					<path d="M16 10a4 4 0 0 1-8 0" />
				</svg>
				<span id="cart-count" class="cart-count" aria-hidden="true">0</span>
			</button>
			<span class="social-pill">Open late â€¢ Analog only</span>
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1.25em;
		background: linear-gradient(
			120deg,
			rgba(var(--coffee-dark), 0.98),
			rgba(var(--coffee), 0.96)
		);
		color: #fdf8ef;
		box-shadow: 0 14px 30px rgba(var(--coffee-dark), 0.7);
	}
	h2 {
		margin: 0;
		font-size: 0.95em;
		letter-spacing: 0.18em;
		text-transform: uppercase;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
		color: inherit;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	nav a {
		padding: 1em 0.5em;
		color: rgba(255, 251, 244, 0.9);
		border-bottom: 4px solid transparent;
		text-decoration: none;
		font-size: 0.9rem;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	.social-links,
	.social-links a {
		display: flex;
		align-items: center;
	}

	.cart-open-btn {
		display: inline-flex;
		align-items: center;
		justify-content: center;
		gap: 0.35rem;
		background: transparent;
		border: none;
		color: rgba(255, 251, 244, 0.9);
		cursor: pointer;
		padding: 0.5rem;
		margin-right: 0.5rem;
	}
	.cart-open-btn:hover {
		color: #fff;
	}
	.cart-open-btn-bounce .cart-icon {
		animation: cart-icon-bounce 0.5s ease;
	}
	@keyframes cart-icon-bounce {
		0%,
		100% {
			transform: scale(1);
		}
		30% {
			transform: scale(1.35);
		}
		55% {
			transform: scale(0.9);
		}
		80% {
			transform: scale(1.1);
		}
	}
	.cart-icon {
		width: 1.4rem;
		height: 1.4rem;
	}
	.cart-count {
		font-size: 0.8rem;
		font-weight: 700;
		min-width: 1.25rem;
		text-align: center;
	}
	.social-pill {
		padding: 0.35rem 0.9rem;
		border-radius: 999px;
		background: rgba(var(--mint), 0.2);
		border: 1px solid rgba(var(--mint), 0.6);
		color: #e9fff5;
		font-size: 0.75rem;
		text-transform: uppercase;
		letter-spacing: 0.16em;
		white-space: nowrap;
	}

	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}
</style>
