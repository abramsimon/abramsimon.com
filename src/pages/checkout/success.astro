---
export const prerender = true;
import SiteLayout from '../../layouts/SiteLayout.astro';
import { SITE_TITLE } from '../../consts';
---

<SiteLayout
	title={`Order confirmed – ${SITE_TITLE}`}
	description="Thank you for your order."
>
	<section class="checkout-message">
		<h1>Thank you for your order</h1>
		<p>We’ve received your payment. You’ll get a confirmation email shortly.</p>
		<p><a href="/shop/" class="btn btn-primary">Back to shop</a></p>
	</section>
</SiteLayout>

<style>
	.checkout-message {
		text-align: center;
		padding: 2rem 0;
	}
	.checkout-message h1 {
		text-transform: uppercase;
		letter-spacing: 0.06em;
		margin-bottom: 0.75rem;
	}
	.checkout-message p {
		margin-bottom: 1rem;
	}
	.checkout-message .btn {
		display: inline-block;
		margin-top: 0.5rem;
		text-decoration: none;
	}
</style>

<script>
	// Clear cart after successful checkout
	try {
		localStorage.removeItem('brew-groove-cart');
		window.dispatchEvent(new CustomEvent('cart-update'));
	} catch (_) {}
</script>
