---
import SiteLayout from '../../layouts/SiteLayout.astro';
import { SITE_TITLE } from '../../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<SiteLayout title={`${SITE_TITLE} â€“ Notes from the bar`} description="Stories, playlists, and tasting notes from Brew & Groove.">
	<section class="blog-intro">
		<h1>House Notes & Playlists</h1>
		<p>Slow sips, deep cuts, and occasional musings from the coffee bar and listening room.</p>
	</section>
	<section class="blog-grid">
		<ul>
			{
				posts.map((post) => (
					<li>
						<a href={`/blog/${post.id}/`}>
							<img width={720} height={360} src={post.data.heroImage} alt="" />
							<h2 class="title">{post.data.title}</h2>
							<p class="date">
								<FormattedDate date={post.data.pubDate} />
							</p>
						</a>
					</li>
				))
			}
		</ul>
	</section>
</SiteLayout>
